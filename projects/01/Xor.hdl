/**
 * Exclusive-or gate:
 * out = (((a == 0) & (b = 1)) | ((a == 1) & (b = 0)), 1, 0)
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Not(in = a, out = aNot);
    Not(in = b, out = bNot);
    And(a = aNot, b = b, out = aNotAndb);
    And(a = a, b = bNot, out = aAndbNot);
    Or(a = aNotAndb, b = aAndbNot, out = out);
}